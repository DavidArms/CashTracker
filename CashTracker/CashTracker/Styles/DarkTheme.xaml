<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    x:Class="CashTracker.Styles.DarkTheme">
    <!--Background and Primary should be similar-->
    <Color x:Key="PageBackgroundColor">#0D0D0B</Color>
    <Color x:Key="PrimaryColor">#262626</Color>
    <!--Secondary and PrimaryText will appear on top of each so should be different to ensure visibility-->
    <Color x:Key="SecondaryColor">#4F5954</Color>
    <Color x:Key="PrimaryTextColor">WhiteSmoke</Color>
    <Color x:Key="ButtonTextColor">WhiteSmoke</Color> <!--Note: Button backgrounds use the Secondary color-->
    <Color x:Key="SecondaryTextColor">#737373</Color>
    <Color x:Key="TertiaryTextColor">#8C8C8C</Color>
    <Color x:Key="TransparentColor">Transparent</Color>
    <Color x:Key="PrimaryDisabledColor">#404040</Color>
    <Color x:Key="DisabledTextColor">#A6A6A6</Color>
    <Color x:Key="DeleteButtonColor">#C0084D</Color>

</ResourceDictionary>