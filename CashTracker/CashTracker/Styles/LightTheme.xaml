<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    x:Class="CashTracker.Styles.LightTheme">
    <!--Background and Primary should be similar-->
    <Color x:Key="PageBackgroundColor">White</Color>
    <Color x:Key="PrimaryColor">WhiteSmoke</Color>
    <!--Secondary and PrimaryText will appear on top of each so should be different to ensure visibility-->
    <Color x:Key="SecondaryColor">#47A43C</Color>
    <Color x:Key="PrimaryTextColor">#404040</Color>
    <Color x:Key="ButtonTextColor">#404040</Color> <!--Note: Button backgrounds use the Secondary color-->
    <Color x:Key="SecondaryTextColor">#404040</Color>
    <Color x:Key="TertiaryTextColor">#286F22</Color>
    <Color x:Key="TransparentColor">Transparent</Color>
    <Color x:Key="PrimaryDisabledColor">Gray</Color>
    <Color x:Key="DisabledTextColor">#404040</Color>
    <Color x:Key="DeleteButtonColor">#C0084D</Color>

</ResourceDictionary>